<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CriptoValuta"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" x:Class="CriptoValuta.MainWindow"
        mc:Ignorable="d"
        Title="Main" 
        Height="450" 
        Width="600         "
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">
    <Grid>
        <Grid Margin="10" Background=" #483D8B">
            <StackPanel Width="100"
                        HorizontalAlignment="Left"
                        Background="#8470FF">
                <Grid Height="50"
                      Width="100"
                      VerticalAlignment="Top"
                      HorizontalAlignment="Center"
                      Background="Transparent"
                      Margin="0,150,0,0"                     
                      >
                    
                    <Button x:Name="In"
                            Background="Transparent"
                            Width="100"
                            Height="50"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            BorderThickness="0"
                            ClickMode="Hover"
                        >
                        <TextBlock VerticalAlignment="Center"
                                   HorizontalAlignment="Center">Вход</TextBlock>
                    </Button>
                    
                </Grid>
            </StackPanel>

            <Grid Height="80"
                  VerticalAlignment="Top"
                  Background="	#191970"
                 >

                <Button x:Name="Exit"
                    Width="40"
                    Height="40"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Right"
                    Margin="10"
                    Background="Transparent"
                    BorderThickness="0"
                    Click="Exit_Click"
                    ClickMode="Press"
                        >
                    <Image Source="Image/exit_button1.png" Stretch="Uniform">
                        
                    </Image>
                </Button>
            </Grid>
        </Grid>
    </Grid>
</Window>
